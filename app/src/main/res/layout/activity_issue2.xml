<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    tools:context=".issue1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">






            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                >

                <LinearLayout

                    android:layout_width="320dp"
                    android:layout_height="63dp"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp">
                    <LinearLayout
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            app:cardCornerRadius="100dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.048">

                            <ImageView
                                android:id="@+id/bt_location"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/fever" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="205dp"
                        android:paddingLeft="22dp"
                        android:textColor="#000000"

                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Fever"
                        android:textSize="25dp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="49dp"
                android:layout_height="wrap_content">
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                >

                <LinearLayout
                    android:background="@drawable/grd1"
                    android:layout_width="320dp"
                    android:layout_height="300dp"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp">
                    <LinearLayout
                        android:layout_width="298dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView51"
                            android:layout_width="205dp"
                            android:layout_height="46dp"
                            android:layout_weight="1"
                            android:text="Causes"
                            android:textColor="#000000"

                            android:textSize="24dp" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">
                            <TextView
                                android:paddingLeft="12dp"
                                android:paddingTop="10dp"

                                android:id="@+id/textView52"
                                android:layout_width="295dp"
                                android:layout_height="230dp"
                                android:layout_weight="1"
                                android:text="Fever or elevated body temperature might be caused by:\n\n1) A viral infection\n2) A bacterial infection\n3) Heat exhaustion\n4) Side effects of medications\n5) Vaccines and immunizations\n6) Hormone disorders"

                                android:textColor="#2B2B2B"
                                android:textSize="19dp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="49dp"
                android:layout_height="wrap_content">
            </TextView>
            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp">
                <LinearLayout
                    android:background="@drawable/grd1"
                    android:layout_width="320dp"
                    android:layout_height="707dp"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp">
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:paddingLeft="12dp"

                            android:id="@+id/textView41"
                            android:layout_width="205dp"
                            android:layout_height="46dp"
                            android:layout_weight="1"
                            android:text="Home remedies"
                            android:textColor="#000000"

                            android:textSize="24dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">

                            <TextView
                                android:paddingTop="10dp"
                                android:paddingLeft="12dp"

                                android:layout_width="295dp"
                                android:layout_height="125dp"
                                android:text="Drinking plenty of fluids is important when you have a fever, as it can help to prevent dehydration and keep your body cool."
                                android:textColor="#2B2B2B"
                                android:textSize="19dp"
                                >
                            </TextView>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp">

                        </TextView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">
                            <TextView
                                android:paddingLeft="12dp"

                                android:paddingTop="10dp"
                                android:layout_width="295dp"
                                android:layout_height="95dp"
                                android:text="Applying a cool compress to your forehead and wrists can help to soothe and bring down a fever."
                                android:textColor="#2B2B2B"
                                android:textSize="19dp"
                                >
                            </TextView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp">

                        </TextView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">

                            <TextView
                                android:paddingLeft="12dp"

                                android:paddingTop="10dp"
                                android:layout_width="295dp"
                                android:layout_height="105dp"
                                android:text="Taking a lukewarm (not cool or cold) bath can also help to reduce a fever and relax the muscles in your body."
                                android:textColor="#2B2B2B"
                                android:textSize="19dp"
                                >
                            </TextView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp">

                        </TextView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">

                            <TextView
                                android:paddingLeft="12dp"

                                android:paddingTop="10dp"
                                android:layout_width="295dp"
                                android:layout_height="95dp"
                                android:text="Drinking clear broths and soups can help to keep your body hydrated."
                                android:textColor="#2B2B2B"
                                android:textSize="19dp"
                                >
                            </TextView>
                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp">

                        </TextView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">


                            <TextView
                                android:paddingLeft="12dp"
                                android:textColor="#2B2B2B"
                                android:textSize="19dp"
                                android:paddingTop="10dp"
                                android:layout_width="295dp"
                                android:layout_height="145dp"
                                android:text="Having a fever can cause a person to feel hot one minute and cold the next. Wearing too many layers can trap heat against the body, raising body temperature further."
                                >
                            </TextView>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>