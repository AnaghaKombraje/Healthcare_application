<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    tools:context=".issue1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">






            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                >

                <LinearLayout

                    android:layout_width="320dp"
                    android:layout_height="63dp"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp">
                    <LinearLayout
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            app:cardCornerRadius="100dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.048">

                            <ImageView
                                android:id="@+id/bt_location"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/stress" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="205dp"
                        android:paddingLeft="22dp"
                        android:textColor="#000000"

                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Mental stress"
                        android:textSize="25dp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="49dp"
                android:layout_height="wrap_content">
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                >

                <LinearLayout
                    android:background="@drawable/grd1"
                    android:layout_width="320dp"
                    android:layout_height="280dp"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp">
                    <LinearLayout
                        android:layout_width="298dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textView51"
                            android:layout_width="205dp"
                            android:layout_height="46dp"
                            android:layout_weight="1"
                            android:text="Causes"
                            android:textColor="#000000"

                            android:textSize="24dp" />
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">
                            <TextView
                                android:paddingLeft="12dp"
                                android:paddingTop="10dp"

                                android:id="@+id/textView52"
                                android:layout_width="295dp"
                                android:layout_height="210dp"
                                android:layout_weight="1"
                                android:text="Causes of work stress include:\n\n1) Being unhappy in job\n2) Having a heavy workload \n3) Working long hours\n4) Having poor management\n5) Working under dangerous conditions\n"

                                android:textColor="#2B2B2B"
                                android:textSize="19dp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="49dp"
                android:layout_height="wrap_content">
            </TextView>
            <androidx.cardview.widget.CardView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp">
                <LinearLayout
                    android:background="@drawable/grd1"
                    android:layout_width="320dp"
                    android:layout_height="762dp"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp">
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:paddingLeft="12dp"

                            android:id="@+id/textView41"
                            android:layout_width="205dp"
                            android:layout_height="46dp"
                            android:layout_weight="1"
                            android:text="Home remedies"
                            android:textColor="#000000"

                            android:textSize="24dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">

                            <TextView
                                android:paddingTop="10dp"
                                android:paddingLeft="12dp"

                                android:layout_width="295dp"
                                android:layout_height="88dp"
                                android:text="Studies show that physical exercise can help reduce anxiety symptoms."
                                android:textColor="#2B2B2B"
                                android:textSize="19dp"
                                >
                            </TextView>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp">

                        </TextView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">
                            <TextView
                                android:paddingLeft="12dp"

                                android:paddingTop="10dp"
                                android:layout_width="295dp"
                                android:layout_height="88dp"
                                android:text="Meditation can help to slow racing thoughts, making it easier to manage stress and anxiety. "
                                android:textColor="#2B2B2B"
                                android:textSize="19dp"
                                >
                            </TextView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp">

                        </TextView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">

                            <TextView
                                android:paddingLeft="12dp"

                                android:paddingTop="10dp"
                                android:layout_width="295dp"
                                android:layout_height="125dp"
                                android:text="Some people unconsciously tense their muscles in response to anxiety. Progressive relaxation exercises can help to alleviate this tension and reduce stress."
                                android:textColor="#2B2B2B"
                                android:textSize="19dp"
                                >
                            </TextView>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp">

                        </TextView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">

                            <TextView
                                android:paddingLeft="12dp"

                                android:paddingTop="10dp"
                                android:layout_width="295dp"
                                android:layout_height="168dp"
                                android:text="Smelling soothing plant essential oils can help to ease stress and anxiety. Certain scents work better for some people than others, so consider experimenting with various options."
                                android:textColor="#2B2B2B"
                                android:textSize="19dp"
                                >
                            </TextView>
                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp">

                        </TextView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp">


                            <TextView
                                android:paddingLeft="12dp"
                                android:textColor="#2B2B2B"
                                android:textSize="19dp"
                                android:paddingTop="10dp"
                                android:layout_width="295dp"
                                android:layout_height="147dp"
                                android:text="Pets offer companionship, love, and support. Research in 2018 confirmed that pets can be beneficial to people with a variety of mental health issues, including anxiety."
                                >
                            </TextView>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>